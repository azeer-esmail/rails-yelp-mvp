<h1><%= @restaurant.name %></h1>
<h4>Address: <%= @restaurant.address %></h4>
<h5>Category: <%= @restaurant.category %></h5>
<h6>Phone: <%= @restaurant.phone_number %></h6>

<%= link_to 'Back', restaurants_path %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
<%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
<br>
<h1>Reviews</h1>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %> <br><%= review.content %> <br> <%= link_to "Remove", review_path(review), method: :delete, data: { confirm: "Are you sure?" } %> </li>
  <% end %>
</ul>
